# macOS gRPC Debugging Environment Variables
# Add these to your shell profile or run before starting the application

# Enable gRPC debugging
export GRPC_VERBOSITY=debug
export GRPC_TRACE=all

# Force IPv4 (helps avoid IPv6 issues on macOS)
export GRPC_DNS_RESOLVER=native

# OpenTelemetry specific settings
export OTEL_EXPORTER_OTLP_PROTOCOL=grpc
export OTEL_EXPORTER_OTLP_TIMEOUT=10000
export OTEL_LOG_LEVEL=debug

# Node.js specific settings for better networking
export NODE_OPTIONS="--dns-result-order=ipv4first"

# Disable IPv6 for Node.js if needed
export NODE_OPTIONS="$NODE_OPTIONS --experimental-loader=./no-ipv6-loader.mjs"